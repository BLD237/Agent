# Environment="SMTP_EMAIL=your-email@gmail.com"
# Environment="SMTP_PASSWORD=your-password"
# Environment="SMTP_HOST=smtp.gmail.com"
# Environment="SMTP_PORT=587"

[Install]
WantedBy=multi-user.target

